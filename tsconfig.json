{
  "compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "es5",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"sourceMap": true,
                "declaration": true,
		"lib": [
			"dom",
			"esnext", "es5"
		],
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src"]
}
